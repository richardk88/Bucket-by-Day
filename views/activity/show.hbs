<div class="row">
    <div class="container">
        <div class="card blue-grey darken-1 z-depth-5">
            <div class="card-content white-text">
                <span class="card-title"><h1 class="bucketFontWhite">{{activityListName}}</h1></span>
                    <div>DESCRIPTION: {{activityListDescription}}</div>
                    <div>LOCATION: {{activityListLocation}}</div>
                    <div>DURATION: {{activityListDuration}}</div>
                    <div>PRICE: ${{activityListPrice}}</div>
            </div>
            <div class="card-action">
                <a href="{{activityListLink}}">More Info</a>
            </div>
        </div>
    </div>
</div>
<div class="alignCenter">
    <a href="/users/{{userId}}/bucketLists/{{bucketId}}/activityList/{{activityId}}/edit" class="waves-effect waves-light btn #ffb300 amber darken-1 z-depth-5">Edit</a>  
</div>
<br>
<div class="alignCenter">
    <a href="/users/{{userId}}/bucketLists/{{bucketId}}/activityList/{{activityId}}/delete" class="waves-effect waves-light btn #ffb300 amber darken-1 z-depth-5">Delete</a>    
</div>
