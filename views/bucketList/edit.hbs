<div class="row">
        <div class="container">
            <div class="alignCenter">
            <h1 class="bucketFont">Edit Bucket List</h1>
            </div>
            <form method='POST' action='/users/{{userId}}/bucketLists/{{bucketId}}?_method=PUT'>
                <input type='text' name='name' value='{{bucketListName}}'>
                <input type='text' name='description' value='{{bucketListDescription}}'>
                <input type='text' name='totalCost' value='{{bucketListTotalCost}}'>
                
                <div class="alignCenter">
                <input type='submit' class="waves-effect waves-light btn #00838f cyan darken-3"value='Edit Bucket List'>
                </div>
            </form>
            </div>
        </div>
</div>
<div class="alignCenter">
<a href='/users/{{userId}}/bucketLists' class="waves-effect waves-light btn #00838f cyan darken-3">Go Back</a>
</div>