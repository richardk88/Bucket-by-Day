<div class="row">
    <div class="container">
        <div class="card blue-grey darken-1 z-depth-5">
            <div class="card-content white-text">
                <span class="card-title"><h1 class="bucketFontWhite">{{bucketListName}}</h1></span>
                    <div>DESCRIPTION: {{bucketListDescription}}</div>
                        <div class="card-action">
                    <a href="/users/{{userId}}/bucketLists/{{bucketId}}/activityList">Go To Activities</a>
                    <h5>Activities</h5>
                    <ol>
                    {{#each activities}}
                        <li>{{this.name}}</li>
                    {{/each}} 
                    </ol>
                    </div>
            </div>
        </div>
    </div>
</div>

<div class="alignCenter">
<a href="/users/{{userId}}/bucketLists/{{bucketId}}/delete" class="waves-effect waves-light btn #ffb300 amber darken-1 z-depth-4">Delete</a>  
</div>
<br>
<div class="alignCenter">
<a href="/users/{{userId}}/bucketLists/{{bucketId}}/edit" class="waves-effect waves-light btn #ffb300 amber darken-1 z-depth-5">Edit</a>
</div>
<br>
<div class="alignCenter">
<a href="/users/{{userId}}/bucketLists/" class="waves-effect waves-light btn #00838f cyan darken-3 z-depth-5">Go Back</a>
</div>
  
  
  
  
  
  
